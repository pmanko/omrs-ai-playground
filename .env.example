# Instant OpenHIE v2 Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# MySQL Database Configuration
# =============================================================================
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=openmrs
MYSQL_USER=openmrs
MYSQL_PASSWORD=openmrs
MYSQL_ROOT_PASSWORD=openmrs

# =============================================================================
# Vector Database (ChromaDB) Configuration
# =============================================================================
VECTOR_DB_IMAGE=chromadb/chroma:latest
VECTOR_DB_PORT=8001
CHROMADB_HOST=vector-db
CHROMADB_PORT=8000
CHROMA_AUTH_TOKEN=test-token
CHROMA_AUTH_PROVIDER=chromadb.auth.token.TokenAuthServerProvider
CHROMA_AUTH_HEADER=AUTHORIZATION
CHROMA_TELEMETRY=false
PERSIST_DIRECTORY=/chroma/chroma
IS_PERSISTENT=TRUE
CHROMA_THREAD_POOL=40
CHROMA_COLLECTION=openmrs_concepts

# =============================================================================
# Embedding Pipeline Configuration
# =============================================================================
EMBEDDING_PIPELINE_IMAGE=embedding-pipeline:latest
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384
EMBEDDING_BATCH_SIZE=32
MODEL_CACHE_DIR=/app/data/cache

# Pipeline Execution Settings
PIPELINE_MODE=full
SCHEDULE_INTERVAL=daily
SCHEDULE_TIME=02:00
CONCEPT_LIMIT=0
DRY_RUN=false

# =============================================================================
# Multiagent Chat Configuration
# =============================================================================
MULTIAGENT_CHAT_SERVER_IMAGE=multiagent-chat-server:latest
MULTIAGENT_CHAT_CLIENT_IMAGE=multiagent-chat-client:latest

# LLM Configuration
LLM_BASE_URL=http://localhost:1234
LLM_API_KEY=
GENERAL_MODEL=llama-3-8b-instruct
MED_MODEL=medgemma-2
LLM_TEMPERATURE=0.2

# Orchestrator Configuration
ORCHESTRATOR_PROVIDER=openai
ORCHESTRATOR_MODEL=llama-3-8b-instruct
GEMINI_API_KEY=

# A2A Configuration
ENABLE_A2A=true
ENABLE_A2A_NATIVE=false
CHAT_TIMEOUT_SECONDS=90

# A2A Service URLs (for native mode)
A2A_ROUTER_URL=http://localhost:9100
A2A_MEDGEMMA_URL=http://localhost:9101
A2A_CLINICAL_URL=http://localhost:9102

# OpenMRS FHIR Configuration
OPENMRS_FHIR_BASE_URL=https://www.omrs-appo.live/openmrs/ws/fhir2/R4
OPENMRS_USERNAME=admin
OPENMRS_PASSWORD=Admin123

# Spark Thrift Configuration
SPARK_THRIFT_HOST=
SPARK_THRIFT_PORT=10000
SPARK_THRIFT_DATABASE=default
SPARK_THRIFT_USER=
SPARK_THRIFT_PASSWORD=

# Local FHIR Parquet Directory
FHIR_PARQUET_DIR=

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Network Configuration
# =============================================================================
INSTANT_NETWORK=instant